@model MasonryQuantities.Models.MasonryCalculator

@{
    ViewBag.Title = "Specification";
}

<h2>Specification</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Specify information about your wall</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.BlockType)
        </div>
        <div class="editor-field">
            @Html.DropDownList("BlockType")
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BlockStrength)
        </div>
        <div class="editor-field">
            @Html.DropDownList("BlockStrength")
        </div>

       
        <div class="editor-label">
            @Html.LabelFor(model => model.WallHeight)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.WallHeight)
            @Html.ValidationMessageFor(model => model.WallHeight)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.WallLength)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.WallLength)
            @Html.ValidationMessageFor(model => model.WallLength)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.WallEast)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.WallEast)
            @Html.ValidationMessageFor(model => model.WallEast)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.WallNorth)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.WallNorth)
            @Html.ValidationMessageFor(model => model.WallNorth)
        </div>

        <p>
            <input type="submit" value="Calculate" />
        </p>
    </fieldset>
}


